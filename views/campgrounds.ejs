<% include partials/header %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">YelpCamp</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav ml-auto">
      <a class="nav-item nav-link active" href="/">Login <span class="sr-only">(current)</span></a>
      <a class="nav-item nav-link" href="/">Sign Up</a>
    </div>
  </div>
</nav>
<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp</h1>
      <p>View our hand-picked campgrounds from all over the world</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
      </p>
    </div>
  </header>
  <div class="row text-center">
    <% campgrounds.forEach(function(campground) { %>
      <div class="col-lg-3 col-md-6">
        <div class="img-thumbnail">
          <img src="<%= campground.image %>" alt="campground image" width="100%">
          <div class="caption">
            <h4> <%= campground.name %> </h4>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
<% include partials/footer %>
